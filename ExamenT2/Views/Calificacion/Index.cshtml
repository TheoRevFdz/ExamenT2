@using ExamenT2.Models
@model IEnumerable<Alumno>

@{
    ViewBag.Title = "Alumnos";
}

<h2>Listado de Calificaciones</h2>

<p>
    @Html.ActionLink("Nuevo Alumno", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>

<h2>Busqueda de Cursos</h2>
<div>
    @using (Html.BeginForm())
    {
        <em>Alumno a buscar</em>
        @Html.TextBox("nombre", "")
        <button class="btn btn-primary btn-sm">Consulta</button>
    }
</div>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.IdAlumno)</th>
        <th>@Html.DisplayNameFor(model => model.Nombres)</th>
        <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
        <th>@Html.DisplayNameFor(model => model.Nota1)</th>
        <th>@Html.DisplayNameFor(model => model.Nota2)</th>
        <th>@Html.DisplayNameFor(model => model.Nota3)</th>
        <th>@Html.DisplayNameFor(model => model.Nota4)</th>
        <th>@Html.DisplayNameFor(model => model.Promedio)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.IdAlumno)</td>
            <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
            <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
            <td>@Html.DisplayFor(modelItem => item.Nota1)</td>
            <td>@Html.DisplayFor(modelItem => item.Nota2)</td>
            <td>@Html.DisplayFor(modelItem => item.Nota3)</td>
            <td>@Html.DisplayFor(modelItem => item.Nota4)</td>
            <td>@Html.DisplayFor(modelItem => item.Promedio)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdAlumno }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.IdAlumno }) |
                @Html.ActionLink("Borrado", "Delete", new { id = item.IdAlumno })
            </td>
        </tr>
    }

</table>